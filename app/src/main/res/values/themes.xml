<resources>
    <!-- Base application theme. -->
    <style name="Theme.HomeTemperatureControl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2979FF</item>
        <item name="colorPrimaryVariant">#3D5AFE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF3D00</item>
        <item name="colorSecondaryVariant">#FFEA00</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.HomeTemperatureControl.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HomeTemperatureControl.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HomeTemperatureControl.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>